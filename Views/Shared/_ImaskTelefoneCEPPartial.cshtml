<script defer src="https://cdnjs.cloudflare.com/ajax/libs/imask/6.4.2/imask.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Máscara para CEP
        const cepInput = document.querySelector('#CEP');
        if (cepInput) {
            IMask(cepInput, { mask: '00000-000' });
        }

        // Máscara para CPF
        const cpfInput = document.querySelector('#CPF');
        if (cpfInput) {
            IMask(cpfInput, { mask: '000.000.000-00' });
        }

        // Máscara para RG
        const rgInput = document.querySelector('#RG');
        if (rgInput) {
            IMask(rgInput, { mask: '00.000.000-0' });
        }

        // Máscara para UF (apenas 2 letras)
        const ufInput = document.querySelector('#UF');
        if (ufInput) {
            IMask(ufInput, { mask: /^[A-Za-z]{0,2}$/ });
        }
    });
</script>